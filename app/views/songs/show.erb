<h1 style="text-align: center"> <%= @song.title %> </h1>
<p> <%=@song.author %>	</p>
<% if session["current_user"] %>
<p>Post by: <%= @username%> </p>
<% else %>
<p>Post by: Anonymous </p>
<% end %>

<% url = @song.url.sub(/watch\?v=/,'embed/')%>
<object style="width:100%;height:100%;width: 820px; height: 461.25px; float: none; clear: both; margin: 2px auto;margin-left: 290px" data="<%= url%>" class="video"></object>
<% if session["current_user"] == @user.id%>
<a href="/songs/delete" class="btn btn-default trash"><span class="glyphicon glyphicon-trash"> Delete</span></a>
<%end%>


