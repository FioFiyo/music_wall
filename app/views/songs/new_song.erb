	<form method="post" action="/songs" class="form-inline">
	<input type="hidden" name="" value="">

  <div class="form-group">
    <label class="sr-only" for="author">Artist/Band</label>

    <input type="text" name="author" value="<% @song.author %>" placeholder="Artist/Band">
  </div>

  <div class="form-group">
    <label class="sr-only" for="song title">Song title:</label>
    <input type="text" name="title" value="<% @song.title %>" placeholder="Song title">
  </div>

  <div class="form-group">
    <label class="sr-only" for="video">Video link:</label>
    <input type="url" name="url" value="<% @song.url%>" placeholder="Video Link">
  </div>
  
  <button type="submit" class="btn btn-default">Submit</button>
</form>
<br>
<% if session["current_user"]%>
<a href="/homepage" class="btn btn-default">Back to home</a>
<% else%>
<a href="/songs" class="btn btn-default">Back to songs</a>
<% end %>
